@model Gestionale.Models.Stato
@{
    ViewBag.Title = "Stato";
}

<div class="container">
    <div class="row mx-auto">
        <div class="col-md-6 col-md-offset-3">
            <div class="card w-75">
                <div class="card-body shadow">
                    <h2 class="card-title">Stato Spedizione</h2>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="mb-3">
                            <label class="form-label"> Data di consegna stimata: </label>
                            @Html.EditorFor(model => model.DataConsegna, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.DataConsegna, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label"> Stato della spedizione: </label>
                            @Html.EditorFor(model => model.StatoSpedizione, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StatoSpedizione, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label"> Data aggiornamento: </label>
                            @Html.EditorFor(model => model.DataAggiornamento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.DataAggiornamento, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label"> Spedizione in Consegna? </label>
                            @Html.CheckBoxFor(model => model.InConsegna, new { @class = "form-check-input" })
                        </div>

                        <button type="submit" class="btn btn-success">Aggiorna Stato</button>
                    }
                </div>
            </div>
        </div>


    </div>
</div>

