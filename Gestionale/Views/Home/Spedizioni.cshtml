

@model Gestionale.Models.Spedizione
@{
    ViewBag.Title = "Spedizioni";
}

<h2>Spedizioni</h2>
<p>Qui puoi rintracciare le tue spedizioni, segui i passaggi</p>
<div class="container ">
    <div class="row mx-auto">
        <div class="col-md-6 col-md-offset-3">
            <div class="card w-75">
                <div class="card-body shadow">
                    <h2 class="card-title">Cerca Spedizione</h2>
                    <hr />

                    @using (Html.BeginForm("Spedizioni", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.id, "Inserisci qui il numero della tua spedizione")
                            @Html.TextBoxFor(m => m.id, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group mt-3">
                            @Html.LabelFor(m => m.CF, "Inserisci il tuo C.F. o P.IVA")
                            @Html.TextBoxFor(m => m.CF, new { @class = "form-control ", required = "required" })
                        </div>

                        <button type="submit" class="btn btn-outline-warning mt-3">Cerca</button>
                    }
                </div>
                </div>
            </div>
        </div>
    </div>

